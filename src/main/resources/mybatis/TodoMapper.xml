<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tobby.dailyapp.todo.mapper.TodoMapper">
    <select id="findSubTodos" resultType="com.tobby.dailyapp.todo.dto.TodoListResponse">
        SELECT *
        FROM sub_todo
        ORDER BY id DESC
        LIMIT #{size}
    </select>

    <insert id="insertSubTodos"
            useGeneratedKeys="true"
            keyProperty="id"
    >
        INSERT sub_todo (todo_id, title)
            VALUE (#{todoId}, #{title})
    </insert>
</mapper>